<!DOCTYPE html>
<html>
<head>
  <title>IdeaBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class='navbar navbar-default'>
     <div class='container-fluid'>
        <% if  current_user %>
        <div class="navbar-header">
          <nav class='navbar-brand'><%= "#{current_user.username}\'s Ideabox" %></nav>
          <span><a href="/" class="navbar-link navbar-right"><%= link_to "Logout", logout_path, method: :delete %></a></span>
        </div>
        <% else %>
        <div class="navbar-header">
          <nav class='navbar-brand'><%= "Welcome to Ideabox" %></nav>
          <span><a href="/" class="navbar-link navbar-right"><%= link_to "Login", login_path %></a></span>
       </div>
        <% end %>
     </div>
   </nav>

   <div class="container">
      <% flash.each do |type, message| %>
        <%= content_tag :div, message, class: "flash_#{type}" %>
      <% end %>

    <%= yield %>
  </div>
</body>

</html>
