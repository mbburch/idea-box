<div class='well well-sm text-center'>
  <h1 class = "header"><%= "#{@user.username}\'s Ideas" %></h1>
</div>

<h1 class="text-center">Ideas</h1>

<%= link_to new_user_idea_path(@user), class: 'btn btn-success' do %>
<i class="glyphicon glyphicon-plus"></i> New Idea
<% end %>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% @ideas.each do |idea| %>
    <tr>
      <td><%= link_to idea.title, user_idea_path(@user, idea) %></td>
      <td><%= idea.description %></td>
      <td>
        <%= link_to "Edit", edit_user_idea_path(@user, idea) %>
        <%= link_to "Destroy", user_idea_path(@user, idea), method: :delete %>
      </td>
    </tr>
    <% end %>
  </table>